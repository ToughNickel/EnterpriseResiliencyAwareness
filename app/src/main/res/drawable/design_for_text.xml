        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="#F6F9F6" />
            <stroke android:width="4dp" android:color="#4CBCC7" />
            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="12dp" android:topRightRadius="12dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="10dp"
            android:shape="rectangle">
